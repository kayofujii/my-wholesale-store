      "options": [
        {
          "value": "none",
          "label": "Default"
        },
        {
          "value": "uppercase",
          "label": "Uppercase"
        }
      ],
      "default": "uppercase"
    }
  ],
  "presets": [
    {
      "name": "Product details"
    }
  ],
  "tag": null
}
{% endschema %}
