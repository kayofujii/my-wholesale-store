    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background",
      "default": "#fdfaf5"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading",
      "default": "#4a3728"
    },
    {
      "type": "color",
      "id": "label_color",
      "label": "Label",
      "default": "#7b5040"
    },
    {
      "type": "color",
      "id": "value_color",
      "label": "Value",
      "default": "#1e1e1e"
    },
    {
      "type": "color",
      "id": "divider_color",
      "label": "Divider",
      "default": "#c4a882"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading size",
      "min": 14,
      "max": 32,
      "step": 2,
      "unit": "px",
      "default": 24
    },
    {
      "type": "range",
      "id": "label_size",
      "label": "Label size",
      "min": 10,
      "max": 18,
      "step": 1,
      "unit": "px",
      "default": 12
    },
    {
      "type": "range",
      "id": "value_size",
