{% liquid
  assign banner_image = collection.metafields.custom.banner_image.value

  if banner_image == blank and section.settings.fallback_image != blank
    assign banner_image = section.settings.fallback_image
  endif

  if banner_image == blank and collection.image != blank
    assign banner_image = collection.image
  endif
%}

<section
  id="shopify-section-{{ section.id }}"
  class="collection-banner"
  style="
    --collection-banner-title-color: {{ section.settings.title_color }};
    --collection-banner-description-color: {{ section.settings.description_color }};
    --collection-banner-overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    --collection-banner-min-height: {{ section.settings.min_height }}px;
    --collection-banner-content-width: {{ section.settings.content_max_width }}px;
    --collection-banner-padding-top: {{ section.settings.padding_top }}px;
    --collection-banner-padding-bottom: {{ section.settings.padding_bottom }}px;
    --collection-banner-padding-right: {{ section.settings.padding_right }}px;
    --collection-banner-padding-left: {{ section.settings.padding_left }}px;
  "
>
  {% if banner_image != blank %}
    {{
      banner_image
      | image_url: width: 2400
      | image_tag:
        class: 'collection-banner__image',
        loading: 'eager',
        fetchpriority: 'high',
        widths: '750, 1100, 1500, 2000, 2400',
        sizes: '100vw',
        alt: collection.title
    }}
  {% endif %}

  <div class="collection-banner__overlay"></div>

  <div class="collection-banner__content page-width">
    <div class="collection-banner__inner">
      <h1 class="collection-banner__title">{{ collection.title }}</h1>
      {% if collection.description != blank %}
        <div class="collection-banner__description rte">
          {{ collection.description }}
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% stylesheet %}
  .collection-banner {
    position: relative;
    min-height: var(--collection-banner-min-height);
    overflow: hidden;
    padding-top: var(--collection-banner-padding-top);
    padding-bottom: var(--collection-banner-padding-bottom);
    padding-left: var(--collection-banner-padding-left);
    padding-right: var(--collection-banner-padding-right);
    display: flex;
    align-items: center;
  }

  .collection-banner__image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .collection-banner__overlay {
    position: absolute;
    inset: 0;
    background: rgb(0 0 0 / var(--collection-banner-overlay-opacity));
    pointer-events: none;
  }

  .collection-banner__content {
    position: relative;
    z-index: 1;
    width: 100%;
  }

  .collection-banner__inner {
    max-width: var(--collection-banner-content-width);
  }

  .collection-banner__title {
    margin: 0;
    color: var(--collection-banner-title-color);
  }

  .collection-banner__description {
    margin-top: 0.75rem;
    color: var(--collection-banner-description-color);
  }

  .collection-banner__description > *:first-child {
    margin-top: 0;
  }

  .collection-banner__description > *:last-child {
    margin-bottom: 0;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Collection banner",
  "tag": "section",
  "class": "section-wrapper",
  "settings": [
    {
      "type": "header",
      "content": "Banner image"
    },
    {
      "type": "paragraph",
      "content": "Uses collection metafield custom.banner_image by default."
    },
    {
      "type": "image_picker",
      "id": "fallback_image",
      "label": "Fallback image"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay opacity",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 30
    },
    {
      "type": "header",
      "content": "Text colors"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description color",
      "default": "#FFFFFF"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "min_height",
      "label": "Minimum height",
      "min": 200,
      "max": 800,
      "step": 20,
      "unit": "px",
      "default": 360
    },
    {
      "type": "range",
      "id": "content_max_width",
      "label": "Content max width",
      "min": 320,
      "max": 1200,
      "step": 20,
      "unit": "px",
      "default": 900
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_right",
      "label": "Right padding",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_left",
      "label": "Left padding",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "default": 32
    }
  ]
}
{% endschema %}
